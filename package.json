{
  "private": true,
  "name": "fog-tools-preact-cli-app",
  "version": "1.2.0",
  "license": "",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --template src/app-frame.html --no-prerender",
    "serve": "preact build --template src/app-frame.html --no-prerender && preact serve",
    "dev": "preact watch --template src/app-frame.html",
    "lint": "eslint src",
    "test": "jest ./tests",
    "flow:watch": "flow-watch"
  },
  "browserslist": [
    "> 1%",
    "IE >= 9",
    "last 2 versions"
  ],
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "dotenv": "^5.0.1",
    "dotenv-webpack": "^1.5.5",
    "eslint": "^4.9.0",
    "eslint-config-synacor": "^2.0.2",
    "flow-bin": "^0.69.0",
    "flow-watch": "^1.1.3",
    "http-proxy": "^1.16.2",
    "identity-obj-proxy": "^3.0.0",
    "if-env": "^1.0.0",
    "jest": "^21.2.1",
    "node-sass": "^4.8.3",
    "preact-cli": "^2.1.0",
    "preact-cli-plugin-flow": "^0.2.0",
    "preact-render-spy": "^1.2.1",
    "sass-loader": "^6.0.7"
  },
  "dependencies": {
    "auth0-js": "^9.4.2",
    "linkstate": "^1.1.1",
    "normalize.css": "^8.0.0",
    "preact": "^8.2.6",
    "preact-compat": "^3.17.0",
    "preact-router": "^2.5.7",
    "react-router-dom": "^4.2.2",
    "react-transition-group": "^2.3.1",
    "unistore": "^3.0.4"
  },
  "jest": {
    "verbose": true,
    "setupFiles": [
      "<rootDir>/src/tests/__mocks__/browserMocks.js"
    ],
    "testURL": "http://localhost:8080",
    "moduleFileExtensions": [
      "js",
      "jsx"
    ],
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/src/tests/__mocks__/fileMock.js",
      "\\.(css|less|scss)$": "identity-obj-proxy",
      "^./style$": "identity-obj-proxy",
      "^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
      "^react$": "preact-compat",
      "^react-dom$": "preact-compat",
      "^create-react-class$": "preact-compat/lib/create-react-class",
      "^react-addons-css-transition-group$": "preact-css-transition-group"
    }
  }
}
